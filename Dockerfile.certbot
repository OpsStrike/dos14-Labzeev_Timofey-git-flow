FROM certbot/certbot

RUN apk update && apk add --no-cache openssl

RUN pip install -U --no-cache-dir certbot-nginx

RUN apk add --no-cache netcat-openbsd

COPY ./setup_certificates.sh /usr/bin/setup_certificates.sh

RUN chmod +x /usr/bin/setup_certificates.sh

ENTRYPOINT ["/usr/local/bin/setup_certificates.sh"]

